{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"types": ["@cloudflare/workers-types", "node"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@aura/domain": ["../../packages/domain/src"],
			"@aura/shared": ["../../packages/shared/src"]
		},
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true
	},
	"include": ["src"]
}
