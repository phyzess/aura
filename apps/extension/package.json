{
	"name": "@aura/extension",
	"version": "1.4.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"i18n:compile": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide",
		"build": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide && tsc -b ../../tsconfig.json && vite build",
		"build:check": "pnpm build && ./scripts/check-bundle-size.sh",
		"analyze": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide && tsc -b ../../tsconfig.json && ANALYZE=true vite build",
		"preview": "vite preview",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage"
	},
	"dependencies": {
		"@aura/config": "workspace:*",
		"@aura/domain": "workspace:*",
		"@aura/shared": "workspace:*",
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/modifiers": "^9.0.0",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@formkit/auto-animate": "^0.9.0",
		"@logtape/logtape": "^1.3.6",
		"better-auth": "^1.4.7",
		"clsx": "^2.1.1",
		"jotai": "^2.16.0",
		"lucide-react": "^0.561.0",
		"motion": "^12.23.26",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-hot-toast": "^2.6.0",
		"react-tiny-popover": "^8.1.6",
		"tailwind-merge": "^3.4.0"
	},
	"devDependencies": {
		"@crxjs/vite-plugin": "^2.3.0",
		"@inlang/paraglide-js": "2.7.0",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.1",
		"@types/chrome": "^0.1.32",
		"@types/node": "^25.0.2",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"happy-dom": "^20.0.11",
		"rollup-plugin-visualizer": "^6.0.5",
		"sharp": "^0.34.5",
		"svgo": "^4.0.0",
		"tailwindcss": "^4.1.18",
		"typescript": "~5.9.3",
		"valibot": "^1.2.0",
		"vite-plugin-compression2": "^2.4.0",
		"vite-plugin-image-optimizer": "^2.0.3",
		"vite-plugin-zip-pack": "^1.2.4",
		"vite-tsconfig-paths": "^6.0.3"
	}
}
