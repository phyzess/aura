{
	"name": "aura",
	"type": "module",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"prepare": "husky",
		"changeset": "changeset",
		"changeset:version": "changeset version",
		"dev": "pnpm --filter @aura/extension dev",
		"build": "pnpm --filter @aura/extension build",
		"preview": "pnpm --filter @aura/extension preview",
		"dev:extension": "pnpm --filter @aura/extension dev",
		"build:extension": "pnpm --filter @aura/extension build",
		"preview:extension": "pnpm --filter @aura/extension preview",
		"dev:api": "pnpm --filter @aura/api dev",
		"dev:api:prod": "pnpm --filter @aura/api dev:prod",
		"deploy:api": "pnpm --filter @aura/api run deploy",
		"db:migrate:local": "pnpm --filter @aura/api db:migrate:local",
		"db:migrate:remote": "pnpm --filter @aura/api db:migrate:remote",
		"db:clear:local": "sh ./scripts/clear-db-local.sh",
		"db:clear:remote": "sh ./scripts/clear-db-remote.sh",
		"test": "pnpm test:shared && pnpm test:domain && pnpm test:api && pnpm test:extension",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"test:shared": "pnpm --filter @aura/shared test",
		"test:domain": "pnpm --filter @aura/domain test",
		"test:api": "pnpm --filter @aura/api test",
		"test:extension": "pnpm --filter @aura/extension test",
		"analyze": "pnpm --filter @aura/extension analyze",
		"lint": "biome check .",
		"format": "biome format --write .",
		"check": "biome check --write ."
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,md}": [
			"biome check --write --no-errors-on-unmatched"
		]
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.9",
		"@changesets/cli": "^2.29.8",
		"@vitest/coverage-v8": "^4.0.16",
		"@vitest/ui": "^4.0.16",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"vite": "^7.3.0",
		"vitest": "^4.0.16"
	}
}
